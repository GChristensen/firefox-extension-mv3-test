{
    "manifest_version": 3,
    "name": "Firefox MV3 Extension Stub",
    "description": "A minimal example of a Firefox extension using manifest v3",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Firevox MV3 Extension Stub",
        "default_popup": "popup/popup.html"
    },
    "permissions": [],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "scripts": ["background.js"]
    }
}
